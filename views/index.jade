!!!
html(ng-app="myApp", ng-cloak)
  head
    title LearnSpice
    base(href='/')
    meta(charset='utf8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    link(rel='stylesheet', href='//bootswatch.com/yeti/bootstrap.min.css', media='screen')
    link(rel='stylesheet', href='/css/app.css')
    script(type='text/javascript') if(window.location.href.indexOf('#_=_')>0){window.location=window.location.href.replace(/#.*/,'');}
  body(ng-controller='mainController')
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
          .span.sr-only Toggle navigation
          .span.icon-bar
          .span.icon-bar
          .span.icon-bar
        a.navbar-brand(href='/') LearnSpice
      .collapse.navbar-collapse.navbar-ex1-collapse
        ul.nav.navbar-nav.pull-right
          li.dropdown(ng-hide='user._id')
            a.dropdown-toggle(data-toggle='dropdown') Login
            ul.dropdown-menu.pull-right
              li
                a(href='#', ng-click='authenticate("facebook")') Facebook
              li
                a(href='#', ng-click='authenticate("google")') Google
          li.dropdown(ng-show='user._id')
            a.dropdown-toggle(data-toggle='dropdown') {{user.name}}
              span.caret
            ul.dropdown-menu.pull-right
              li
                a(href='/settings') Settings
              li
                a(href='#', ng-click='logout()') Sign Out
    div(ng-view)

    script(src='/socket.io/socket.io.js')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js')
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js')
    script(src='/js/app.js')
    script(src='/js/controllers.js')
    script(src='/js/directives.js')
    script(src='/js/filters.js')
    script(src='/js/services.js')
